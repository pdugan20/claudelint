{
  "name": "claude-code-lint",
  "version": "0.2.0-beta.0",
  "description": "Comprehensive linter and programmatic API for Claude Code projects - validates CLAUDE.md files, skills, settings, hooks, MCP servers, plugins, and more",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claude-code-lint": "bin/claude-code-lint"
  },
  "scripts": {
    "generate:types": "ts-node scripts/generate/rule-types.ts",
    "generate:schema-rules": "ts-node scripts/generate/schema-rules.ts",
    "prebuild": "ts-node scripts/generate/rule-types.ts",
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint:md": "markdownlint --config .markdownlint.json '**/*.md' --ignore node_modules",
    "lint:md:fix": "markdownlint --config .markdownlint.json '**/*.md' --ignore node_modules --fix",
    "docs:generate": "ts-node scripts/generate/rule-docs.ts",
    "generate:rule-registry": "ts-node scripts/generate/rule-registry.ts",
    "check:emojis": "node scripts/check/emoji.js",
    "check:logger-spacing": "bash scripts/check/logger-spacing.sh",
    "check:file-naming": "ts-node scripts/check/file-naming.ts",
    "check:rule-ids": "ts-node scripts/check/rule-ids.ts",
    "check:rule-docs": "ts-node scripts/check/rule-docs.ts",
    "check:rule-option-docs": "ts-node scripts/check/rule-option-docs.ts",
    "check:rule-option-interfaces": "ts-node scripts/check/rule-option-interfaces.ts",
    "check:consistency": "ts-node scripts/check/consistency.ts",
    "check:all": "ts-node scripts/check/all.ts",
    "audit:rule-docs": "ts-node scripts/audit/rule-docs.ts",
    "audit:rule-docs:content": "ts-node scripts/audit/rule-docs-content.ts",
    "check:rule-coverage": "ts-node scripts/check/rule-coverage.ts",
    "check:duplicates": "ts-node scripts/check/duplicate-logic.ts",
    "check:duplicate-fixtures": "ts-node scripts/check/duplicate-fixtures.ts",
    "verify:rule-implementations": "ts-node scripts/verify/rule-implementations.ts",
    "verify:rule-structure": "ts-node scripts/verify/rule-structure.ts",
    "test:validators": "jest tests/validators --coverage",
    "test:schemas": "jest tests/schemas --coverage",
    "validate": "node bin/claude-code-lint check-all",
    "validate:all": "npm run lint && npm run format:check && npm run lint:md && npm run check:emojis && npm run build && npm test",
    "setup:hooks": "bash scripts/util/setup-hooks.sh",
    "postinstall": "bash scripts/util/setup-hooks.sh || true",
    "prepare": "husky install || true",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist",
    "check:deadcode": "knip",
    "check:deadcode:production": "knip --production",
    "release": "release-it",
    "release:beta": "release-it --preRelease=beta",
    "release:alpha": "release-it --preRelease=alpha",
    "release:rc": "release-it --preRelease=rc",
    "release:dry": "release-it --dry-run",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "sync:versions": "ts-node scripts/sync-versions.ts",
    "sync:versions:check": "ts-node scripts/check/version-sync.ts",
    "migrate:name": "ts-node scripts/migrate-package-name.ts",
    "migrate:name:dry": "ts-node scripts/migrate-package-name.ts --dry-run"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "markdownlint --fix"
    ]
  },
  "keywords": [
    "claude",
    "claude-code",
    "validation",
    "linter",
    "cli",
    "developer-tools",
    "programmatic",
    "api",
    "nodejs",
    "typescript"
  ],
  "author": "Pat Dugan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pdugan20/claude-code-lint.git"
  },
  "bugs": {
    "url": "https://github.com/pdugan20/claude-code-lint/issues"
  },
  "homepage": "https://github.com/pdugan20/claude-code-lint#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin",
    ".claude-plugin",
    "skills",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@types/inquirer": "^9.0.7",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "diff": "^5.2.2",
    "glob": "^10.3.10",
    "inquirer": "^9.2.12",
    "js-yaml": "^4.1.0",
    "markdownlint": "^0.35.0",
    "minimatch": "^9.0.5",
    "ora": "^6.3.1",
    "prettier": "^3.1.1",
    "zod": "^3.22.4",
    "zod-validation-error": "^5.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@release-it/conventional-changelog": "^10.0.4",
    "@types/diff": "^7.0.2",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "emoji-regex": "^10.6.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "knip": "^5.82.1",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "release-it": "^19.2.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
