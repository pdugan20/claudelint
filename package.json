{
  "name": "@patdugan/claude-validator",
  "version": "0.1.0",
  "description": "Validation toolkit for Claude Code projects - validates CLAUDE.md files, skills, settings, hooks, and more",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claude-validator": "./bin/claude-validator"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "claude",
    "claude-code",
    "validation",
    "linter",
    "cli",
    "developer-tools"
  ],
  "author": "Pat Dugan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/patdugan/claude-validator.git"
  },
  "bugs": {
    "url": "https://github.com/patdugan/claude-validator/issues"
  },
  "homepage": "https://github.com/patdugan/claude-validator#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "bin",
    ".claude-plugin",
    "skills",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.3"
  }
}
