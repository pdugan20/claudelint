{
  "name": "claude-code-lint",
  "version": "0.2.0-beta.1",
  "description": "Comprehensive linter and programmatic API for Claude Code projects - validates CLAUDE.md files, skills, settings, hooks, MCP servers, plugins, and more",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "claudelint": "bin/claudelint"
  },
  "scripts": {
    "generate:json-schemas": "ts-node scripts/generate/json-schemas.ts",
    "generate:schema-rules": "ts-node scripts/generate/schema-rules.ts",
    "generate:types": "ts-node scripts/generate/rule-types.ts",
    "prebuild": "ts-node scripts/generate/rule-types.ts",
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "docs:generate": "ts-node scripts/generate/rule-docs.ts",
    "docs:dev": "npm run docs:generate && vitepress dev website",
    "docs:build": "npm run docs:generate && vitepress build website",
    "docs:preview": "vitepress preview website",
    "test": "jest",
    "test:schemas": "jest tests/schemas --coverage",
    "test:skills:automated": "npm-run-all test:skills:structure test:skills:cli",
    "test:skills:cli": "bash scripts/test/skills/test-cli-commands.sh",
    "test:skills:manual": "echo 'See docs/skill-testing.md for manual test protocol. Run scripts/generate-manual-test-protocol.sh to generate checklist.'",
    "test:skills:metadata": "jest tests/skills/metadata.test.ts",
    "test:skills:structure": "bash scripts/test/skills/validate-self.sh",
    "test:validators": "jest tests/validators --coverage",
    "test:watch": "jest --watch",
    "lint": "npm-run-all --parallel lint:ts lint:vue lint:css lint:md lint:pkg:quiet",
    "lint:css": "stylelint 'website/.vitepress/theme/**/*.{css,vue}'",
    "lint:css:fix": "stylelint 'website/.vitepress/theme/**/*.{css,vue}' --fix",
    "lint:fix": "npm-run-all --parallel lint:ts:fix lint:vue:fix lint:css:fix lint:md:fix",
    "lint:md": "markdownlint --config .markdownlint.json '**/*.md' --ignore node_modules",
    "lint:md:fix": "markdownlint --config .markdownlint.json '**/*.md' --ignore node_modules --fix",
    "lint:pkg": "npmPkgJsonLint .",
    "lint:pkg:quiet": "npmPkgJsonLint . --quiet",
    "lint:ts": "eslint src --ext .ts",
    "lint:ts:fix": "eslint src --ext .ts --fix",
    "lint:vue": "eslint 'website/.vitepress/**/*.vue'",
    "lint:vue:fix": "eslint 'website/.vitepress/**/*.vue' --fix",
    "format": "prettier --write \"src/**/*.ts\" \"**/*.json\" \"website/.vitepress/**/*.vue\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"**/*.json\" \"website/.vitepress/**/*.vue\"",
    "check": "npm-run-all --parallel check:emojis check:logger-spacing check:logger-usage check:milestone-refs check:publint",
    "check:all": "ts-node scripts/check/all.ts",
    "check:self": "npm run build && node bin/claudelint check-all",
    "check:consistency": "ts-node scripts/check/consistency.ts",
    "check:constants": "npm-run-all check:tool-names check:model-names",
    "check:deadcode": "knip",
    "check:deadcode:production": "knip --production",
    "check:emojis": "node scripts/check/emoji.js",
    "check:file-naming": "ts-node scripts/check/file-naming.ts",
    "check:message-content": "ts-node scripts/check/message-content.ts",
    "check:message-length": "ts-node scripts/check/message-length.ts",
    "check:hardcoded-counts": "ts-node scripts/check/hardcoded-counts.ts",
    "check:links": "node scripts/check/links.js",
    "check:links:all": "remark --use remark-validate-links --frail website/ README.md CONTRIBUTING.md",
    "check:logger-spacing": "bash scripts/check/logger-spacing.sh",
    "check:logger-usage": "bash scripts/check/logger-usage.sh",
    "check:milestone-refs": "bash scripts/check/milestone-refs.sh",
    "check:model-names": "ts-node scripts/verify/model-names.ts",
    "check:publint": "publint",
    "check:spelling": "cspell 'website/**/*.md' --no-progress",
    "check:rule-coverage": "ts-node scripts/check/rule-coverage.ts",
    "check:rule-docs": "ts-node scripts/check/rule-docs.ts",
    "check:rule-docs-audit": "ts-node scripts/audit/rule-docs.ts",
    "check:rule-ids": "ts-node scripts/check/rule-ids.ts",
    "check:rule-implementations": "ts-node scripts/verify/rule-implementations.ts",
    "check:rule-option-docs": "ts-node scripts/check/rule-option-docs.ts",
    "check:rule-option-interfaces": "ts-node scripts/check/rule-option-interfaces.ts",
    "check:rule-structure": "ts-node scripts/verify/rule-structure.ts",
    "check:schema-sync": "ts-node scripts/check/schema-sync.ts",
    "check:schemas": "ts-node scripts/verify/compare-schemas.ts",
    "check:tool-names": "ts-node scripts/verify/tool-names.ts",
    "validate": "npm-run-all lint format:check build test",
    "validate:all": "npm-run-all lint format:check build test check:all",
    "release": "release-it",
    "release:alpha": "release-it --preRelease=alpha",
    "release:beta": "release-it --preRelease=beta",
    "release:dry": "release-it --dry-run",
    "release:major": "release-it major",
    "release:minor": "release-it minor",
    "release:patch": "release-it patch",
    "release:rc": "release-it --preRelease=rc",
    "sync:versions": "ts-node scripts/util/sync-versions.ts",
    "sync:versions:check": "ts-node scripts/check/version-sync.ts",
    "setup:hooks": "bash scripts/util/setup-hooks.sh",
    "postinstall": "node scripts/util/postinstall.js && bash scripts/util/setup-hooks.sh || true",
    "prepublishOnly": "npm run build"
  },
  "lint-staged": {
    "package.json": [
      "prettier --write",
      "npmPkgJsonLint ."
    ],
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "website/.vitepress/**/*.vue": [
      "eslint --fix",
      "stylelint --fix",
      "prettier --write"
    ],
    "website/.vitepress/**/*.css": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.md": [
      "markdownlint --fix"
    ]
  },
  "keywords": [
    "claude",
    "claude-code",
    "validation",
    "linter",
    "cli",
    "developer-tools",
    "programmatic",
    "api",
    "nodejs",
    "typescript"
  ],
  "author": "Pat Dugan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pdugan20/claudelint.git"
  },
  "bugs": {
    "url": "https://github.com/pdugan20/claudelint/issues"
  },
  "homepage": "https://claudelint.com",
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist",
    "bin",
    ".claude-plugin",
    "skills",
    "README.md",
    "LICENSE"
  ],
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "chalk": "^5.3.0",
    "commander": "^14.0.3",
    "diff": "^8.0.3",
    "glob": "^13.0.0",
    "inquirer": "^13.2.2",
    "js-yaml": "^4.1.0",
    "markdownlint": "^0.40.0",
    "minimatch": "^10.1.1",
    "ora": "^9.3.0",
    "prettier": "^3.1.1",
    "text-table": "^0.2.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.0",
    "@commitlint/config-conventional": "^20.4.0",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "@release-it/conventional-changelog": "^10.0.4",
    "@types/diff": "^8.0.0",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^25.2.2",
    "@types/text-table": "^0.2.5",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "cspell": "^9.6.4",
    "emoji-regex": "^10.6.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.7.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "knip": "^5.82.1",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "npm-package-json-lint": "^9.1.0",
    "npm-run-all2": "^8.0.4",
    "postcss-html": "^1.8.1",
    "prettier-plugin-packagejson": "^3.0.0",
    "publint": "^0.3.17",
    "release-it": "^19.2.4",
    "remark-cli": "^12.0.1",
    "remark-validate-links": "^13.1.0",
    "stylelint": "^17.2.0",
    "stylelint-config-recommended-vue": "^1.6.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vitepress": "^1.6.4",
    "vue": "^3.5.28",
    "vue-eslint-parser": "^10.2.0"
  }
}
