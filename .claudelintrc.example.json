{
  "$schema": "https://raw.githubusercontent.com/pdugan20/claudelint/main/schema.json",
  "rules": {
    "size-error": "error",
    "size-warning": "warn",
    "import-missing": "error",
    "import-circular": "error",
    "skill-missing-shebang": "warn",
    "skill-missing-comments": "warn",
    "skill-dangerous-command": "error",
    "skill-eval-usage": "error",
    "skill-path-traversal": "error",
    "skill-missing-changelog": "warn",
    "skill-missing-examples": "warn",
    "skill-missing-version": "warn",
    "skill-too-many-files": "warn",
    "skill-deep-nesting": "warn",
    "skill-naming-inconsistent": "warn"
  },
  "overrides": [
    {
      "files": ["*.test.ts", "*.spec.ts"],
      "rules": {
        "size-warning": "off"
      }
    },
    {
      "files": [".claude/skills/**/SKILL.md"],
      "rules": {
        "size-error": "off",
        "size-warning": "off"
      }
    }
  ],
  "ignorePatterns": [
    "**/*.generated.ts",
    ".cache/",
    "coverage/"
  ],
  "output": {
    "format": "stylish",
    "verbose": false,
    "color": true
  },
  "reportUnusedDisableDirectives": true,
  "maxWarnings": 10
}
