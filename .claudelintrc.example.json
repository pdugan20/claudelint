{
  "rules": {
    "claude-md-size": "warn",
    "claude-md-import-missing": "error",
    "claude-md-import-circular": "error",
    "skill-missing-shebang": "warn",
    "skill-missing-comments": "warn",
    "skill-dangerous-command": "error",
    "skill-eval-usage": "error",
    "skill-path-traversal": "error",
    "skill-missing-changelog": "warn",
    "skill-missing-examples": "warn",
    "skill-missing-version": "warn",
    "skill-too-many-files": "warn",
    "skill-deep-nesting": "warn",
    "skill-naming-inconsistent": "warn"
  },
  "overrides": [
    {
      "files": ["*.test.ts", "*.spec.ts"],
      "rules": {
        "claude-md-size": "off"
      }
    },
    {
      "files": [".claude/skills/**/SKILL.md"],
      "rules": {
        "claude-md-size": "off"
      }
    }
  ],
  "ignorePatterns": ["**/*.generated.ts", ".cache/", "coverage/"],
  "output": {
    "format": "stylish",
    "verbose": false,
    "color": true
  },
  "reportUnusedDisableDirectives": true,
  "maxWarnings": 10
}
