{
  "name": "claudelint-monorepo-example",
  "version": "1.0.0",
  "private": true,
  "description": "Example monorepo demonstrating claudelint workspace support",
  "scripts": {
    "lint": "claudelint check-all --workspaces",
    "lint:app-1": "claudelint check-all --workspace app-1",
    "lint:app-2": "claudelint check-all --workspace app-2",
    "lint:shared": "claudelint check-all --workspace shared",
    "lint:verbose": "claudelint check-all --workspaces --verbose"
  },
  "keywords": [
    "claudelint",
    "monorepo",
    "example"
  ]
}
