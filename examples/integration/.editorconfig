# EditorConfig for Claude Code projects
# See https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{md,markdown}]
trim_trailing_whitespace = false

[*.{json,yaml,yml}]
indent_style = space
indent_size = 2

[*.sh]
# Google Shell Style Guide
indent_style = space
indent_size = 2
