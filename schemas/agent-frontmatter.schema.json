{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://raw.githubusercontent.com/pdugan20/claudelint/main/schemas/agent-frontmatter.schema.json",
  "title": "Claude Code Agent Frontmatter",
  "description": "Schema for agent YAML frontmatter",
  "source": "https://code.claude.com/docs/en/sub-agents#supported-frontmatter-fields",
  "sourceType": "documentation",
  "type": "object",
  "required": ["name", "description"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Unique identifier using lowercase letters and hyphens",
      "pattern": "^[a-z0-9]+(-[a-z0-9]+)*$",
      "maxLength": 64
    },
    "description": {
      "type": "string",
      "description": "When Claude should delegate to this subagent",
      "minLength": 10
    },
    "tools": {
      "type": "array",
      "description": "Tools the subagent can use (inherits all tools if omitted)",
      "items": {
        "type": "string"
      }
    },
    "disallowedTools": {
      "type": "array",
      "description": "Tools to deny, removed from inherited or specified list",
      "items": {
        "type": "string"
      }
    },
    "model": {
      "type": "string",
      "description": "Model to use: sonnet, opus, haiku, or inherit",
      "enum": ["sonnet", "opus", "haiku", "inherit"]
    },
    "permissionMode": {
      "type": "string",
      "description": "Permission mode for the subagent",
      "enum": ["default", "acceptEdits", "dontAsk", "bypassPermissions", "plan", "delegate"]
    },
    "skills": {
      "type": "array",
      "description": "Skills to load into the subagent's context at startup",
      "items": {
        "type": "string"
      }
    },
    "maxTurns": {
      "type": "integer",
      "description": "Maximum number of agentic turns",
      "exclusiveMinimum": 0
    },
    "mcpServers": {
      "type": "array",
      "description": "List of MCP server names available to the agent",
      "items": {
        "type": "string"
      }
    },
    "memory": {
      "type": "string",
      "description": "Memory scope for the agent",
      "enum": ["user", "project", "local"]
    },
    "color": {
      "type": "string",
      "description": "Display color for the agent in the UI",
      "enum": ["blue", "cyan", "green", "yellow", "magenta", "red", "pink"]
    },
    "hooks": {
      "type": "object",
      "description": "Lifecycle hooks scoped to this subagent, keyed by event name (e.g. PreToolUse, PostToolUse)",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "matcher": { "type": "string" },
            "hooks": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "type": { "type": "string", "enum": ["command", "prompt", "agent"] },
                  "command": { "type": "string" },
                  "prompt": { "type": "string" },
                  "agent": { "type": "string" },
                  "timeout": { "type": "number" },
                  "statusMessage": { "type": "string" },
                  "once": { "type": "boolean" },
                  "model": { "type": "string" },
                  "async": { "type": "boolean" }
                },
                "required": ["type"]
              }
            }
          },
          "required": ["hooks"]
        }
      }
    }
  }
}
